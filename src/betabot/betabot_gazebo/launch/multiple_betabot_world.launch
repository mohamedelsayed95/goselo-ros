<launch>
  <!-- ==========Simulation Environment============ -->
  <!-- using custom sdf models -->
  <env name="GAZEBO_MODEL_PATH" value="$(find betabot_gazebo)/models"/>
  <!-- call betabot costom world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!-- <arg name="world_name" value="$(find betabot_gazebo)/worlds/office_earthquake.world"/> -->
    <arg name="world_name" value="$(find betabot_gazebo)/worlds/betabot_simple_env_1.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include> 
  <!-- ============================================= -->
  <!-- =================Betabots==================== -->
  <!-- first betabot name -->
  <arg name="first_bb"  default="bb_0"/>
  <!-- first betabot location -->
  <arg name="first_bb_x_pos" default="-7.0"/>
  <arg name="first_bb_y_pos" default="-1.0"/>
  <arg name="first_bb_z_pos" default=" 0.0"/>
  <arg name="first_bb_yaw"   default=" 1.57"/>

  <!--first betabot to spawn in world-->
  <group ns = "$(arg first_bb)">
    
    <!-- call betabot urdf description -->
    <param name="robot_description" command="$(find xacro)/xacro.py $(find betabot_description)/urdf/betabot.urdf.xacro" />

    <!-- send fake joint values -->
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"> 
    </node>

    <!-- Combine joint values -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg first_bb)" />
    </node>

    <!-- bring betabot to the world -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg first_bb) -x $(arg first_bb_x_pos) -y $(arg first_bb_y_pos) -z $(arg first_bb_z_pos) -Y $(arg first_bb_yaw) -param robot_description" />

  </group>

  <arg name="sec_bb"  default="bb_1"/>
  <!-- sec betabot location -->
  <arg name="sec_bb_x_pos" default=" 7.0"/>
  <arg name="sec_bb_y_pos" default="-1.0"/>
  <arg name="sec_bb_z_pos" default=" 0.0"/>
  <arg name="sec_bb_yaw"   default=" 1.57"/>

  <!--first betabot to spawn in world-->
  <group ns = "$(arg sec_bb)">
    
    <!-- call betabot urdf description -->
    <param name="robot_description" command="$(find xacro)/xacro.py $(find betabot_description)/urdf/betabot.urdf.xacro" />

    <!-- send fake joint values -->
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"> 
    </node>

    <!-- Combine joint values -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
      <param name="publish_frequency" type="double" value="50.0" />
      <param name="tf_prefix" value="$(arg first_bb)" />
    </node>

    <!-- bring betabot to the world -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg sec_bb) -x $(arg sec_bb_x_pos) -y $(arg sec_bb_y_pos) -z $(arg sec_bb_z_pos) -Y $(arg sec_bb_yaw) -param robot_description" />

  </group>
  <!-- ============================================= -->
  <!-- =================ExtraParam================== -->
  <!-- PID parameters of betabot wheels -->
  <rosparam param="/gazebo_ros_control/pid_gains">
    left_wheel_link:
      p: 10
      i: 0.1
      d: 0
  </rosparam>
  <rosparam param="/gazebo_ros_control/pid_gains">
    right_wheel_link:
      p: 10
      i: 0.1
      d: 0
  </rosparam>


</launch>